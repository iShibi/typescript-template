{
	"name": "typescript-template",
	"version": "1.0.0",
	"description": "Template repository for a TypeScript project",
	"author": {
		"name": "Shubham Parihar",
		"email": "shubhamparihar391@gmail.com",
		"url": "https://github.com/iShibi"
	},
	"license": "MIT",
	"main": "./dist/index.js",
	"scripts": {
		"build": "tsc",
		"build:dev": "tsc -w",
		"test": "vitest",
		"prepare": "husky install",
		"type:check": "tsc --noEmit",
		"lint:check": "eslint . --ext .js,.ts",
		"lint:fix": "eslint . --ext .js,.ts --fix",
		"format:check": "prettier --check .",
		"format:fix": "prettier --write .",
		"prepublishOnly": "npm run build",
		"deps:check": "npx npm-check-updates",
		"deps:update": "npx npm-check-updates -u"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.1.2",
		"@commitlint/config-angular": "^17.1.0",
		"@types/node": "^18.8.3",
		"@typescript-eslint/eslint-plugin": "^5.39.0",
		"@typescript-eslint/parser": "^5.39.0",
		"eslint": "^8.25.0",
		"eslint-config-prettier": "^8.5.0",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"typescript": "^4.8.4",
		"vitest": "^0.24.0"
	},
	"files": [
		"/dist"
	],
	"engines": {
		"node": ">=16.0.0",
		"npm": ">=7.0.0"
	},
	"homepage": "https://github.com/iShibi/typescript-template#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/iShibi/typescript-template.git"
	},
	"bugs": {
		"url": "https://github.com/iShibi/typescript-template/issues"
	},
	"keywords": [
		"template",
		"typescript",
		"node",
		"eslint",
		"prettier"
	]
}
